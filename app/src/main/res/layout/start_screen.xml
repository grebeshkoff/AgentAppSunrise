<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text='ООО "Эффект"'
            android:id="@+id/textView" android:layout_marginTop="20dp" android:gravity="center_vertical|center_horizontal"
            android:textSize="20dp"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:src="@drawable/bag"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Клиент Торгового Агента"
            android:id="@+id/textView1" android:textSize="20dp" android:gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="20dp"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBarCheck" android:layout_gravity="center" android:indeterminate="false" android:keepScreenOn="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Инициализация..."
            android:id="@+id/textViewCheck" android:layout_gravity="center" android:layout_marginTop="10dp"/>
</LinearLayout>
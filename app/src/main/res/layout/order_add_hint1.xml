<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:padding="10dp">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Примечание #1"
            android:id="@+id/textViewHintHead" android:textSize="20dp" android:layout_marginBottom="10dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:id="@+id/editTextHint1" android:gravity="left|top"
            android:layout_marginBottom="20dp"
            android:inputType="textMultiLine|textNoSuggestions"/>
    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Сохранить"
                android:id="@+id/buttonHint1Save" android:layout_gravity="center_horizontal|top"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Отмена"
                android:id="@+id/buttonHint1Cancel" android:layout_gravity="center"/>
    </TableRow>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content" android:padding="10dp">

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
            <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text='"Таїрово" вино Оксамит черв. дес. 0,7л'
                    android:id="@+id/textViewPositionName"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:id="@+id/textViewPsitionCount" android:textColor="#ffad07" android:textSize="15dp"/>
        </TableRow>
    </TableLayout>
    <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="AlkBz"
                android:id="@+id/textViewPriceType1" android:layout_gravity="center_horizontal|top"
                android:textColor="#ff0018" android:textStyle="bold"/>
        <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:id="@+id/textViewCount1" android:textColor="#ffad07" android:textStyle="bold"/>
        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="S6"
                android:id="@+id/textViewPriceType2" android:textStyle="bold" android:textColor="#ff0018"/>
        <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/textViewCount2" android:textColor="#ffad07" android:textStyle="bold"/>
    </TableRow>
</LinearLayout>
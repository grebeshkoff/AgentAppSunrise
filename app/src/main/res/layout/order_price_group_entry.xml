<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="#828082">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Коробки.пакеты"
                android:id="@+id/textViewGroupName" android:gravity="center_vertical|center_horizontal"
                android:textSize="20dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                android:textColor="#facb51" android:clickable="true"/>
    </LinearLayout>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Вид цены"
            android:id="@+id/textView" android:textSize="20dp"/>
    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPriceType"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listViewGroupEntry"
            android:descendantFocusability="blocksDescendants" />
</LinearLayout>